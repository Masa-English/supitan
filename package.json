{
  "name": "masa-flash-with-quiz",
  "version": "1.0.0",
  "description": "効率的な英語学習をサポートするフラッシュカードアプリ",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "quality-check": "node scripts/quality-check.mjs",
    "pre-deploy": "node scripts/pre-deploy.mjs",
    "sync-types": "supabase gen types typescript --project-id yuzoaegfjjxoptytqtzq --schema public > lib/database.types.ts",
    "db:init": "supabase init",
    "db:link": "supabase link",
    "db:pull": "supabase db pull",
    "db:generate": "supabase migration new",
    "db:migrate": "supabase db push",
    "db:reset": "supabase db reset",
    "db:status": "supabase status",
    "storage:rls": "node scripts/apply-storage-rls.mjs",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rm -rf .next out dist",
    "clean:all": "rm -rf .next out dist node_modules package-lock.json",
    "dev-setup": "node scripts/dev-setup.mjs",
    "deploy-check": "node scripts/deploy-check.mjs",
    "deploy": "npm run deploy-check && vercel --prod"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.1",

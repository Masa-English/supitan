{
  "name": "masa-flash-with-quiz",
  "version": "1.0.0",
  "description": "効率的な英語学習をサポートするフラッシュカードアプリ",
  "private": true,
  "scripts": {
    "dev": "set NEXT_TELEMETRY_DISABLED=1 && next dev",
    "build": "node scripts/optimize-build.mjs && set NEXT_TELEMETRY_DISABLED=1 && next build",
    "build:analyze": "set ANALYZE=true && set NEXT_TELEMETRY_DISABLED=1 && next build",
    "build:optimize": "node scripts/optimize-build.mjs",
    "start": "set NEXT_TELEMETRY_DISABLED=1 && next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest --config config/jest.config.ts --passWithNoTests",
    "test:watch": "jest --config config/jest.config.ts --watch",
    "test:coverage": "jest --config config/jest.config.ts --coverage",
    "test:e2e": "playwright test --config config/playwright.config.ts",
    "quality-check": "node scripts/quality-check.mjs",
    "pre-deploy": "node scripts/pre-deploy.mjs",
    "sync-types": "supabase gen types typescript --linked --schema public > lib/database.types.ts",
    "db:init": "supabase init",
    "db:link": "supabase link",
    "db:pull": "supabase db pull",
    "db:generate": "supabase migration new",
    "db:migrate": "supabase db push",
    "db:reset": "supabase db reset",
    "db:status": "supabase status",
    "db:start": "supabase start",
    "db:stop": "supabase stop",
    "dev:local": "copy .env.local.development .env.local && set NEXT_TELEMETRY_DISABLED=1 && next dev",
    "dev:prod": "copy .env.production .env.local && set NEXT_TELEMETRY_DISABLED=1 && next dev",
    "local-setup": "node scripts/local-dev-setup.mjs",
    "sync-schema": "node scripts/sync-remote-schema.mjs",
    "storage:rls": "node scripts/apply-storage-rls.mjs",
    "audio:fix": "node scripts/fix-audio-files.mjs",
    "audio:check": "node scripts/check-audio-storage.mjs",
    "audio:fix-paths": "node scripts/fix-audio-paths.mjs",
    "audio:update-paths": "node scripts/update-audio-paths.mjs",
    "format": "prettier --config config/prettier.config.mjs --write .",
    "format:check": "prettier --config config/prettier.config.mjs --check .",
    "clean": "rm -rf .next out dist",
    "clean:all": "rm -rf .next out dist node_modules package-lock.json",
    "dev-setup": "node scripts/dev-setup.mjs",
    "deploy-check": "node scripts/deploy-check.mjs",
    "deploy": "npm run deploy-check && vercel --prod",
    "perf:check": "node scripts/performance-check.mjs",
    "perf:bundle": "node scripts/bundle-analysis.mjs",
    "vercel:logs": "node scripts/check-vercel-logs.mjs",
    "supabase:status": "node scripts/check-supabase-status.mjs"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.1",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.6",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.2",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "latest",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.1",
    "lucide-react": "^0.511.0",
    "next": "15.5.9",
    "next-themes": "^0.4.6",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "tailwind-merge": "^3.3.0",
    "web-vitals": "^5.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "^15.5.7",
    "@playwright/test": "^1.54.2",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.20",
    "eslint": "^9",
    "eslint-config-next": "^15.5.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^12.8.2",
    "postcss": "^8",
    "prettier": "^3.2.5",
    "supabase": "^2.31.8",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "ts-node": "^10.9.2",
    "typescript": "^5",
    "typescript-eslint": "^8.48.1"
  }
}

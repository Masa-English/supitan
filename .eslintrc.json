{
  "extends": [
    "next/core-web-vitals",
    "next/typescript"
  ],
  "rules": {
    "react-hooks/exhaustive-deps": "error",
    "@typescript-eslint/no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],
    "no-console": "off",
    "consistent-return": "off",
    "no-else-return": "error",
    "sort-imports": "off",
    "no-unused-vars": "off",
    "react/display-name": "warn",
    "@typescript-eslint/consistent-type-imports": "off"
  }
}